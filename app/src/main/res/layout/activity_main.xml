<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

        <FrameLayout
            android:id="@+id/fl_content"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

        </FrameLayout>

        <RadioGroup
            android:visibility="gone"
            android:id="@+id/rg_main"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="bottom"
            android:orientation="horizontal"
            android:background="#7d7d7d">

                <RadioButton
                    android:checked="true"
                    android:id="@+id/rb_calculate"
                    style="@style/main_tab_bottom"
                    android:drawableTop="@drawable/drawable_calculate"
                    android:text="计算器" />

                <RadioButton
                    android:visibility="gone"
                    android:id="@+id/rb_money"
                    style="@style/main_tab_bottom"
                    android:drawableTop="@drawable/drawable_money"
                    android:text="赚钱" />

                <RadioButton
                    android:id="@+id/rb_news"
                    style="@style/main_tab_bottom"
                    android:drawableTop="@drawable/drawable_news"
                    android:text="新闻" />


                <LinearLayout
                    android:visibility="gone"
                    android:gravity="center"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:id="@+id/ll_book"
                    android:layout_weight="1"
                    android:orientation="vertical">

                        <ImageView
                            android:src="@drawable/icon_no_book"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:text="小说"
                            android:textColor="@color/white"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="11sp"/>

                </LinearLayout>

        </RadioGroup>

</LinearLayout>
