<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <!--<style name="AppTheme" parent="AppBaseTheme">-->
        <!--&lt;!&ndash; All customizations that are NOT specific to a particular API-level can go here. &ndash;&gt;-->
    <!--</style>-->

    <style name="AppMainTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="StartSplashTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <!--<item name="android:windowIsTranslucent">true</item>-->
        <item name="android:screenOrientation">portrait</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.Launcher">
        <item name="android:windowBackground">@drawable/icon_calculator_splash</item>
    </style>

    <style name="digits_btn_style">
        <item name="android:background">@drawable/btn_digit</item>
    </style>

    <style name="title">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:layout_gravity">right|center_vertical</item>

    </style>

    <style name="baseButtonStyle">
        <item name="android:layout_margin">0.1dip</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:textSize">18sp</item>
    </style>


    <style name="baseButtonStyle1">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Button3Style" parent="baseButtonStyle">
        <item name="android:layout_margin">0.1dip</item>
        <item name="android:background">#FFFFFA</item>
        <item name="android:textSize">28sp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="Button3Style1" parent="baseButtonStyle1">
        <item name="android:layout_margin">0.1dip</item>
        <item name="android:background">#FFFFFA</item>
        <item name="android:textSize">24sp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="Button4Style"  parent="baseButtonStyle">
        <item name="android:layout_margin">0.1dip</item>
        <item name="android:background">#FFAA00</item>
        <item name="android:layout_weight">3</item>
        <item name="android:textColor">#ffffff</item>
    </style>
    <style name="Col1Style">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_weight">0.1</item>
    </style>
    <style name="Col2Style">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_weight">0.1</item>
    </style>

    <style name="main_tab_bottom">
        <item name="android:textSize">11sp</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:button">@null</item>
        <item name="android:layout_weight">1.0</item>
        <item name="android:textColor">@drawable/text_color</item>
    </style>
</resources>